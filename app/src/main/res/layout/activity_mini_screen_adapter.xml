<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.altron.mylpedia2.Adapter.Mini_Screen_Adapter">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="102dp"
        android:layout_height="147dp"
        android:id="@+id/mis_network_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textSize="20sp"
        android:id="@+id/mis_txt_name"
        android:layout_toEndOf="@+id/mis_network_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/mis_txt_name"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:id="@+id/mis_txt_cost"
        android:layout_toEndOf="@+id/mis_network_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/mis_txt_cost"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:id="@+id/mis_txt_class"
        android:layout_toEndOf="@+id/mis_network_image" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/mis_txt_class"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:id="@+id/mis_txt_frequency"
        android:layout_toEndOf="@+id/mis_network_image" />
</RelativeLayout>
